#!/bin/sh
#-*- sh -*-

# some constants #
OUTPUT_NAME=bin/printf2
MAIN=src/ServerMain.c
LIBRARIES="-lc -lm bin/libenet.a -Wl,-rpath,\$ORIGIN"
FLAGS="-fsanitize=address -g"
INCLUDES="-Ilib/enet/include -I."
##################

# internal vars dont touch #
ARGS=( $@ )
NARG=0
PROG_NAME=$0
############################

set -e

# $1 offset
getarg() {
  echo ${ARGS[$NARG + $1]}
}

argv() {
  R=${ARGS[@]:$NARG}
  echo ${R[@]}
}

target_build_depend() {
  make ./bin/libenet.a
  make ./bin/libimgui.a
}

target_build() {
  mkdir -p bin
  target_build_depend
  c++ server/Main.cpp bin/libimgui.a -lGL -lXcursor -lXi -lX11 $FLAGS $LIBRARIES $INCLUDES -o bin/printf2_server
  cc client/Main.c $FLAGS $LIBRARIES $INCLUDES -o bin/printf2_client
}

target_run() {
  target_build
  bin/printf2_$1 `argv`
}

hasargs=1

# Fetch all sparse args
while [ $hasargs -eq 1 ]
do
  case `getarg 0` in
    *)
      hasargs=0
    ;;
  esac
done

case `getarg 0` in
  build)
    target_build
  ;;
  run)
    target_run `getarg 1`
  ;;
  *)
    echo "You can do: run, build"
  ;;
esac


